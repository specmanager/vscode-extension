{
  "name": "specmanager",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "1.0.0",
  "publisher": "SpecManager",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/specmanager/vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "specmanager",
    "specs",
    "tasks",
    "project management",
    "workflow"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onUri"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "specmanager.openDashboard",
        "title": "%command.openDashboard%",
        "category": "SpecManager"
      },
      {
        "command": "specmanager.refreshData",
        "title": "%command.refreshData%",
        "category": "SpecManager",
        "icon": "$(refresh)"
      },
      {
        "command": "specmanager.logout",
        "title": "%command.logout%",
        "category": "SpecManager"
      }
    ],
    "views": {
      "specmanager": [
        {
          "type": "webview",
          "id": "specmanager.sidebar",
          "name": "%view.dashboard%",
          "icon": "./icons/activity-bar-icon.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "specmanager",
          "title": "%view.containerTitle%",
          "icon": "./icons/activity-bar-icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "specmanager.refreshData",
          "when": "view == specmanager.sidebar",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "specmanager.apiUrl": {
          "type": "string",
          "default": "https://api.specmanager.ai",
          "scope": "window",
          "description": "%config.apiUrl.description%"
        },
        "specmanager.language": {
          "type": "string",
          "enum": [
            "auto",
            "en",
            "he",
            "es"
          ],
          "enumDescriptions": [
            "%config.language.auto.description%",
            "%config.language.en.description%",
            "%config.language.he.description%",
            "%config.language.es.description%"
          ],
          "default": "auto",
          "scope": "window",
          "description": "%config.language.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:webview && node esbuild.js --production",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc -b --watch",
    "watch:webview": "npm run build:webview -- --watch",
    "package": "npm run check-types && npm run lint && npm run build:webview && node esbuild.js --production",
    "build:webview": "vite build --emptyOutDir",
    "dev:webview": "vite",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc -b",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/eventsource": "^1.1.15",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.0.0",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^6.0.3",
    "vscode-nls-dev": "^4.0.4"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eventsource": "^4.1.0",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.468.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.3",
    "tailwind-merge": "^2.6.0",
    "vscode-nls": "^5.2.0"
  }
}
